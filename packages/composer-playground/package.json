        "@babel/core": "7.0.0-beta.35",
        "@babel/preset-env": "7.0.0-beta.35",
        "@compodoc/compodoc": "^1.0.0-beta.15",
        "@ngtools/webpack": "^1.8.0",
        "@types/chai": "3.4.35",
        "@types/dropboxjs": "0.0.29",
        "@types/filesystem": "0.0.28",
